// .vscode/tasks.json
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Java File on Change",
			"type": "shell",
			"command": "java",
			"args": ["${fileBasenameNoExtension}"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		}
	],
	"presentation": {
		"reveal": "always",
		"panel": "shared",
		"clear": true
	},
	"isTestCommand": true,
	"options": {
		"cwd": "${workspaceFolder}"
	},
	"group": {
		"kind": "build",
		"isDefault": true
	}
}
